                    size_hint_y: None
                    height: 10
                
                MDIcon:
                    icon: "office-building"
                    theme_icon_color: "Custom"
                    icon_color: [0.6, 0.4, 1, 1]
                    font_size: "32sp"
                    size_hint_y: None
                    height: 40
                    halign: "center"
                
                MDLabel:
                    text: "[b]Professionnel[/b]"
                    font_style: "H6"
                    markup: True
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: [0.2, 0.2, 0.2, 1]
                    size_hint_y: None
                    height: 30
                
                MDLabel:
                    text: "Conforme aux standards CEET-DRM pour un usage professionnel"
                    font_style: "Caption"
                    halign: "center"
                    text_size: self.width, None
                    size_hint_y: None
                    height: 60
    
    MDLabel:
        id:Page1_2
        text: "CEET-DRM-BCC"
        font_style:"Caption"
        markup:True
        halign:"center"
        pos_hint:{"center_y":.22}
    
    MDRaisedButton:
        id:Page1_3
        text:"Aller"
        on_release:app.Go(self)
        size_hint:.3,.05
        font_size:30
        pos_hint:{"center_x":.5,"center_y":.15}
        md_bg_color: [0.2, 0.6, 1, 1]  # Couleur bleue pour le bouton